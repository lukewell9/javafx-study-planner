<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MainController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="20" style="-fx-padding: 20;">
            <Label text="StudyFlow" style="-fx-font-size: 26; -fx-font-weight: bold;" />

            <Button text="Dashboard" fx:id="btnDashboard" onAction="#showDashboard"
                    style="-fx-background-radius: 10; -fx-pref-width: 150;" />
            <Button text="Study Planner" fx:id="btnPlanner" onAction="#showPlanner"
                    style="-fx-background-radius: 10; -fx-pref-width: 150;" />
            <Button text="Schedule" fx:id="btnSchedule" onAction="#showSchedule"
                    style="-fx-background-radius: 10; -fx-pref-width: 150;" />
            <Button text="Progress" fx:id="btnProgress" onAction="#showProgress"
                    style="-fx-background-radius: 10; -fx-pref-width: 150;" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;" fx:id="contentArea">

            <Label text="Welcome back!" 
                   style="-fx-font-size: 30; -fx-font-weight: bold;" />

            <Label text="Here's your study overview for today"
                   style="-fx-opacity: 0.7;" />

            <!-- Stats Cards -->
            <HBox spacing="20">

                <!-- Card 1: Upcoming Tasks -->
                <VBox style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-padding: 20;"
                      prefWidth="200" prefHeight="100">
                    <Label text="Upcoming Tasks" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                    <Label fx:id="upcomingCount" text="0" style="-fx-font-size: 26;" />
                </VBox>

                <!-- Card 2: Study Sessions -->
                <VBox style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-padding: 20;"
                      prefWidth="200" prefHeight="100">
                    <Label text="Study Sessions (Week)" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                    <Label fx:id="sessionCount" text="0" style="-fx-font-size: 26;" />
                </VBox>

                <!-- Card 3: Tasks Due Today -->
                <VBox style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-padding: 20;"
                      prefWidth="200" prefHeight="100">
                    <Label text="Tasks Due Today" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                    <Label fx:id="dueTodayCount" text="0" style="-fx-font-size: 26;" />
                </VBox>

            </HBox>

            <Label text="Today's Schedule" style="-fx-font-size: 22; -fx-font-weight: bold;" />
            <ListView fx:id="scheduleList" prefHeight="200" />

        </VBox>
    </center>

</BorderPane>
