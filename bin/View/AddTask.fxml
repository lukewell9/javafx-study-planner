<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.AddTaskController"
      spacing="15" style="-fx-padding: 20;">

    <Label text="Add New Task" style="-fx-font-size: 22; -fx-font-weight: bold;" />

    <TextField fx:id="taskNameField" promptText="Task name" />
    <DatePicker fx:id="dueDatePicker" />
    <ComboBox fx:id="priorityBox">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="High" />
                <String fx:value="Medium" />
                <String fx:value="Low" />
            </FXCollections>
        </items>
    </ComboBox>

    <Button text="Save Task" onAction="#saveTask" />

</VBox>
